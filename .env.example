# ===========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control

# Application Security
SECRET_KEY=your-super-secure-secret-key-change-this-in-production-make-it-long-and-random
FLASK_ENV=production
DEBUG=False

# Database Configuration
DATABASE_PATH=data/secure/candidates.db
DATABASE_ENCRYPTION_KEY=your-database-encryption-key-32-chars-long

# Upload Security
UPLOAD_FOLDER=data/uploads
MAX_CONTENT_LENGTH=16777216
ALLOWED_EXTENSIONS=pdf,doc,docx
VIRUS_SCAN_ENABLED=True

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@company.com
SMTP_PASSWORD=your-app-specific-password
SMTP_USE_TLS=True

# Session Security
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Strict
PERMANENT_SESSION_LIFETIME=3600

# Security Headers
CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net; font-src 'self' https://cdn.jsdelivr.net
X_CONTENT_TYPE_OPTIONS=nosniff
X_FRAME_OPTIONS=DENY
X_XSS_PROTECTION=1; mode=block

# Rate Limiting
RATELIMIT_STORAGE_URL=memory://
LOGIN_ATTEMPTS_LIMIT=5
FORM_SUBMISSION_LIMIT=10

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/application.log
SECURITY_LOG_FILE=logs/security.log
AUDIT_LOG_FILE=logs/audit.log

# Admin Account Security
DEFAULT_ADMIN_CREATION=False
REQUIRE_EMAIL_VERIFICATION=True
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=True
PASSWORD_REQUIRE_LOWERCASE=True
PASSWORD_REQUIRE_DIGITS=True
PASSWORD_REQUIRE_SPECIAL=True

# File Storage Security
FILE_ENCRYPTION_ENABLED=True
FILE_NAME_OBFUSCATION=True
SECURE_FILENAME_PREFIX=secure_

# Backup Security
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key-32-chars
BACKUP_RETENTION_DAYS=90
BACKUP_LOCATION=backups/encrypted/

# Application URLs (for production)
APPLICATION_URL=https://yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com
